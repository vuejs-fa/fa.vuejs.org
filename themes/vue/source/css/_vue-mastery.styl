.vue-mastery
  background-color #e7ecf3
  padding 1em 1.25em
  border-radius 2px
  color #486491
  position relative
  margin-top 1em
  a
    color #486491 !important
    position relative
    padding-right 36px
    display block
    font-weight normal !important
    line-height 25px
    &:before
      content ''
      position absolute
      display block
      width 30px
      height 30px
      top -5px
      right -4px
      border-radius 50%
      background-color #73abfe
    &:after
      content ''
      position absolute
      display block
      width 0
      height 0
      top 5px
      right 6px
      border-top 5px solid transparent
      border-bottom 5px solid transparent
      border-left 8px solid #fff
